<!--ACTUAL SCROLLER THINGY-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <!--    FULL LAYOUT (BOTH TOP AND BOTTOM)-->
    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <!--        !!! TOP GENERAL SECTION-->
        <FrameLayout
            android:id="@+id/imageContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#000000"
            tools:ignore="Suspicious0dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <!--            TOP ROW OF BUTTONS-->


            <!--            BOTTOM SECTION -->
            <TextView
                android:id="@+id/location_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="80dp"
                android:fontFamily="@font/vcr"
                android:text="CITY // COUNTRY"
                android:textAlignment="viewStart"
                android:textColor="@color/white"
                android:textSize="32dp" />

            <!--           UNIT TOGGLE -->
            <ToggleButton
                android:id="@+id/unit_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="55dp"
                android:layout_marginEnd="16dp"
                android:background="#FFFFFF"
                android:fontFamily="@font/vcr"
                android:minWidth="110dp"
                android:minHeight="54dp"
                android:textColor="@color/black"
                android:textOff="METRIC"
                android:textOn="IMPERIAL"
                android:textSize="18sp" />

            <!--            go to this menu-->

            <Button
                android:id="@+id/main_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_marginStart="16dp"
                android:layout_marginTop="55dp"
                android:background="@color/white"
                android:fontFamily="@font/vcr"
                android:minWidth="54dp"
                android:minHeight="54dp"
                android:onClick="GO_TO_CLOUD_IDENTIFIER"
                android:text="M"
                android:textColor="@color/black"
                android:textSize="18sp" />


            <!--            go to identifier-->
            <Button
                android:id="@+id/identifier_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_marginStart="87dp"
                android:layout_marginTop="55dp"
                android:background="@color/white"
                android:fontFamily="@font/vcr"
                android:minWidth="54dp"
                android:minHeight="54dp"

                android:text="I"
                android:textColor="@color/black"
                android:textSize="18sp" />


            <!--            -->
            <Button
                android:id="@+id/docs_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_marginStart="158dp"
                android:layout_marginTop="55dp"
                android:background="@color/white"
                android:fontFamily="@font/vcr"
                android:minWidth="54dp"
                android:minHeight="54dp"
                android:text="D"
                android:textColor="@color/black"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/overview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="50dp"
                android:fontFamily="@font/vcr"
                android:text="CONDITION || ##°C"
                android:textAlignment="viewStart"
                android:textColor="@color/white"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/loadingTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="340dp"

                android:fontFamily="@font/vcr"
                android:text="Loading..."
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="29dp" />


        </FrameLayout>


        <!-- BOTTOM DATA SECTION -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="815dp"
            android:background="@color/icon_gray"
            android:orientation="vertical">

            <GridLayout
                android:id="@+id/weatherGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:padding="16dp"
                android:rowOrderPreserved="false">


<!--                <LinearLayout-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="220dp"-->
<!--                    android:layout_columnSpan="2"-->
<!--                    android:layout_margin="8dp"-->
<!--                    android:background="#2196F3"-->
<!--                    android:elevation="4dp"-->
<!--                    android:gravity="center"-->
<!--                    android:orientation="vertical"-->
<!--                    android:padding="8dp">-->

<!--                    <TextView-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:fontFamily="@font/vcr"-->
<!--                        android:text="Blue Rectangle"-->
<!--                        android:textColor="#FFFFFF"-->
<!--                        android:textSize="20sp" />-->
<!--                </LinearLayout>-->


                <!-- TEMPLATE BOX START -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:background="#F5F5F5"
                    android:clipToOutline="true"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:outlineProvider="background"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/temperature"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/vcr"
                        android:gravity="center"
                        android:text="23°C"
                        android:textColor="#000000"

                        android:textSize="28sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/vcr"
                        android:gravity="center"
                        android:text="Temperature"
                        android:textColor="#000000"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Feels Like -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:background="#F5F5F5"
                    android:clipToOutline="true"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:outlineProvider="background"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/temperature_feels_like"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/vcr"
                        android:gravity="center"
                        android:text="22°C"
                        android:textColor="#000000"
                        android:textSize="28sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/vcr"
                        android:gravity="center"
                        android:text="Feels Like"
                        android:textColor="#000000"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Dew Point -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:background="#F5F5F5"
                    android:clipToOutline="true"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:outlineProvider="background"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/dew_point"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/vcr"
                        android:gravity="center"
                        android:text="16°C"
                        android:textColor="#000000"
                        android:textSize="28sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/vcr"
                        android:gravity="center"
                        android:text="Dew Point"
                        android:textColor="#000000"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Wind -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:background="#F5F5F5"
                    android:clipToOutline="true"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:outlineProvider="background"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/wind"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/vcr"
                        android:gravity="center"
                        android:text="5kmh"
                        android:textColor="#000000"
                        android:textSize="28sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/vcr"
                        android:gravity="center"
                        android:text="Wind (NWE)"
                        android:id="@+id/wind_descriptor"
                        android:textColor="#000000"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Pressure -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:background="#F5F5F5"
                    android:clipToOutline="true"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:outlineProvider="background"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/pressure"
                        android:layout_marginBottom="8dp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/vcr"
                        android:gravity="center"
                        android:text="1022 mb"
                        android:textColor="#000000"
                        android:textSize="28sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/vcr"
                        android:gravity="center"
                        android:text="Air Pressure"
                        android:textColor="#000000"
                        android:textSize="14sp" />
                </LinearLayout>


                <!-- Visibility -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:background="#F5F5F5"
                    android:clipToOutline="true"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:outlineProvider="background"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/visibility"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/vcr"
                        android:gravity="center"
                        android:text="24 km"
                        android:textColor="#000000"
                        android:textSize="28sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/vcr"
                        android:gravity="center"
                        android:text="Visibility"
                        android:textColor="#000000"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Humidity -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:background="#F5F5F5"
                    android:clipToOutline="true"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:outlineProvider="background"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/humidity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/vcr"
                        android:gravity="center"
                        android:text="67%"
                        android:textColor="#000000"
                        android:textSize="28sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/vcr"
                        android:gravity="center"
                        android:text="Humidity"
                        android:textColor="#000000"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Cloud Coverage -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:background="#F5F5F5"
                    android:clipToOutline="true"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:outlineProvider="background"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/cloud_coverage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/vcr"
                        android:gravity="center"
                        android:text="75%"
                        android:textColor="#000000"
                        android:textSize="28sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/vcr"
                        android:gravity="center"
                        android:text="Clouds"
                        android:textColor="#000000"
                        android:textSize="14sp" />
                </LinearLayout>



                <ImageView
                    android:id="@+id/fronts_map"
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:layout_columnSpan="2"
                    android:layout_margin="8dp"
                    android:background="@color/black"
                    android:scaleType="fitCenter"
                    />


            </GridLayout>


        </LinearLayout>

    </LinearLayout>
</ScrollView>